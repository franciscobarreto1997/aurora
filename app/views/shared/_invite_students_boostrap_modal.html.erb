    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="header">
          <h2>Invite Students</h2>
        </div>
        <div class="form">
         <form id="invite_students_form">
          <input type="text" class="email-input" name="student_email" placeholder="Type in the student's email">
          <div class="form-actions">
              <input type="submit" value="Add" id="add-btn">
              <input type="submit" value="Invite" id="invite-btn" >
          </div>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>
