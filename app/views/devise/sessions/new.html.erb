<div class="login-container">
  <%= link_to root_path do %>
    <%= image_tag "aurora-logo-white" %>
  <% end %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% if resource.class == User %>
    <h4>Student/Teacher Login</h4>
  <% else %>
    <h4>School Admin Login</h4>
  <% end %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  placeholder: "Your email",
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  placeholder: "Your password",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
  <% if resource.class == User %>
    <%= link_to "Don't have an account? Sign up", new_user_registration_path, class: "login-page-link" %>
  <% else %>
    <%= link_to "Student or Teacher? Log in", new_user_session_path, class: "login-page-link" %>
    <%= link_to "Don't have a School? Create one", new_school_admin_registration_path, class: "login-page-link" %>
  <% end %>
</div>

