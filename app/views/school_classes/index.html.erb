<div class="school-classes-index">
  <h3><%= @school.name %></h3>
  <div class="school-classes">
    <% if @school_classes %>
      <% @school_classes.each do |school_class| %>
      <div class="school-class">
        <div class="icon">
          <i class="fas fa-square"></i>
        </div>
        <p id="class-name">
          <%= school_class.name %>
        </p>
        <div class="student-count">
         <p><%= User.where(school_class_id: school_class.id).count %> students</p>
        </div>
        <div class="add-students">
          <button id="add-students-btn"
                  data-toggle="modal"
                  data-target="#student-invitation-modal"
                  data-school-class-name="<%= school_class.name %>">
            Invite Students
          </button>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
  <%= simple_form_for([ @school, @school_class ], remote: true) do |f| %>
    <%= f.input :name, label: false, placeholder: "Type in a class name" %>
    <%= f.button :submit, value: "Create Class" %>
  <% end %>
</div>
<div class="modal fade" id="student-invitation-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="header">
          <h2>Invite Students</h2>
        </div>
        <div class="form">
         <form>
          <input type="text" id="email-input" name="student_email"><br>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>
